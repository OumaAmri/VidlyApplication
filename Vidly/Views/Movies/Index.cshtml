@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (Model.Count == 0)
    { <text>No Data for the moment</text>}
}
<h1>Movies List</h1>
<a href="Movies/Create" style="color:white"><button class="btn btn-primary">Add movie </button></a>
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <th>
                    <a href="Movies/Edit/@item.Id"> @item.Name</a>
                   
                </th>
                <th>@item.Genre.Name</th>

            </tr>
        }
    </tbody>
</table>